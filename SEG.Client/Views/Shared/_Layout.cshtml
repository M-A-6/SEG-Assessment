<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sharjah E Government</title>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Registration System", "Index", "Employee", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            @*<div class="navbar-collapse collapse">*@
            <ul class="nav navbar-nav">
                @*<li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("Register", "Employee")">Register <span class="sr-only">(current)</span></a>
                    </li>*@
                <li class="nav-item">
                    <a href="@Url.Action("Create", "Employee")" class="nav-link">
                        <span>Add Employee</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("index", "Employee")">Employees</a>
                </li>
                @*<li class="nav-item pull-right">
                        <a class="nav-link" href="@Url.Action("LogOut", "Employee")">LogOut</a>
                    </li>*@
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="@Url.Action("Register", "Employee")"><span class="glyphicon glyphicon-user"></span> Register</a></li>

                <li>
                    <a href="@Url.Action("Login", "Employee")">
                        <span class="glyphicon glyphicon-log-in"></span>
                        SignIn / LogOut
                    </a>
                </li>

                <li>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</li>
                <li>
                    <a class="disabled" href="#" tabindex="-1" aria-disabled="true" id="logInUsername">
                        Username
                    </a>
                </li>

                <li>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</li>
            </ul>
            @*</div>*@
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Sharjah E Government</p>
        </footer>
    </div>
</body>
</html>